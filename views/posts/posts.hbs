    {{#if isRe}}
    <li class="list-group-item mr-3"><strong class="text-primary">Updated At: </strong>{{updatedAt}}</li>
    {{/if}}
    {{#if isRedictable}}
    <div class="row justify-content-md-center">
      <li class="list-group-item"><a class="btn btn-warning" href="/posts/edit/{{_id}}">Edit</a></li>
      <li class="list-group-item"><a class="btn btn-danger" href="/posts/delete/{{_id}}">
          <form method="post" action="/posts/delete/{{_id}}" class="inline">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </a>
